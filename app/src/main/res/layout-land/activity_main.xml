<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.noveogroup.task1.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/scrollView" >

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.noveogroup.task1.FragmentInput"
            android:id="@+id/frag_input"
            tools:layout="@layout/fragment_input" />
    </ScrollView>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.noveogroup.task1.FragmentOutput"
        android:id="@+id/frag_output"
        tools:layout="@layout/fragment_output" />

</LinearLayout>
